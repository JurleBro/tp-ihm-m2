<project>

    <target name="clean">
        <delete dir="ant_build"/>
    </target>

    <target name="compile" depends="clean">
        <mkdir dir="ant_build/classes"/>
        <javac srcdir="src" destdir="ant_build/classes"/>
    </target>

    <target name="jar" depends="compile">
        <mkdir dir="ant_build/jar"/>
        <jar destfile="ant_build/jar/twitter.jar" basedir="ant_build/classes">
            <manifest>
                <attribute name="Main-Class" value="main.java.com.ubo.tp.twitub.TwitubLauncher"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="ant_build/jar/twitter.jar" fork="true"/>
    </target>

</project>
